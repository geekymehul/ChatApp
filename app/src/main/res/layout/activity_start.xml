<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.developinggeek.chatapp.StartActivity">

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Welcome to the" />

    <Button
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/start_btn_reg"
        android:textColor="#FFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="@string/start_reg_btn_txt" />

    <Button
        android:id="@+id/start_btn_hav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/start_btn_reg"
        android:layout_below="@+id/start_btn_reg"
        android:layout_marginTop="22dp"
        android:text="Already Have Account"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Chat App" />


</RelativeLayout>
